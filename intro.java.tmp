
public class Intro {
    public static void main(String[] args) {
        System.out.println("Hello World");
        int a;
        a = 10;
        int b = 20;
        System.out.println(a);
        System.out.println(b);
        System.out.println(a + b);

        String name = "Collins";
        System.out.println(name);
        System.out.println(name.length());
        System.out.println(name.toUpperCase());
        System.out.println(name.toLowerCase());
        System.out.println(name.length());
        int age = 20;
        String message = name + " is about " + age + " years old";
        System.out.println(message);

        char grade = 'A';
        System.out.println(grade);
        float studentFee = 75.25f; //float is used for decimal numbers (4 bytes)
        System.out.println(studentFee);
        double salary = 25000.50; //double is used for decimal numbers (8 bytes)
        System.out.println(salary);
        boolean isEligible = true;
        System.out.println(isEligible);
        //string interpolation
        String greeting = "Hello, " + name + "!";
        System.out.println(greeting);
    }
}
